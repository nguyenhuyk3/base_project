@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Motel.Areas.UserAccount.Models.LoginUserAccount


@{
    ViewBag.Title = "Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://pro.fontawesome.com/releases/v5.15.4/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Motel.styles.css" asp-append-version="true" />
</head>
<body style="margin-bottom: 0px;">
    <div class="px-4 py-5 px-md-5 text-center text-lg-start"
         style="background-color: rgb(210, 210, 210); height: 100vh;">
        <div class="container-fluid">
            <div>
                <a class="fas fa-home text-decoration-none fs-5 text-dark"
                   asp-area="Post" asp-controller="Home" asp-action="Index">
                    Trang chủ
                </a>
            </div>

            <div class="row gx-lg-5 align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <h1 class="my-5 display-3 fw-bold ls-tight">
                        The best offer <br />
                        <span class="text-primary">for your business</span>
                    </h1>
                    <p style="color: hsl(217, 10%, 50.8%)">
                        Lorem ipsum dolor sit amet consectetur adipisicing elit.
                        Eveniet, itaque accusantium odio, soluta, corrupti aliquam
                        quibusdam tempora at cupiditate quis eum maiores libero
                        veritatis? Dicta facilis sint aliquid ipsum atque?
                    </p>
                </div>

                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="card card--login">
                        <div class="card-body py-5 px-md-5">
                            <h3 class="mb-5">Đăng nhập</h3>

                            <form asp-action="Login" asp-controller="UserAccount"
                                  method="post">

                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group mb-4">
                                    <input type="email" asp-for="Email" class="form-control form-control-lg" placeholder="Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <input type="password" asp-for="Password" class="form-control form-control-lg" placeholder="Mật khẩu" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-check d-flex justify-content-start mb-2">
                                    <input class="form-check-input" type="checkbox" id="RememberMe" asp-for="RememberMe" />
                                    <label class="form-check-label" style="margin-left: 15px;" for="RememberMe">Nhớ mật khẩu</label>
                                </div>

                                <input type="hidden" id="RememberMeInput" name="RememberMe" value="false" asp-for="RememberMe" />
                                @* <input type="hidden" asp-for="ReturnUrl" /> *@

                                <a asp-action="Register" asp-controller="UserAccount" class="d-block mb-3">Bạn chưa có tài khoản?</a>

                                <button type="submit" class="btn btn-primary btn-lg">Login</button>

                                <hr class="my-4">

                                <div class="d-flex justify-content-between">
                                    <button type="button" class="btn btn-lg btn-block btn-primary"
                                            style="background-color: #dd4b39;"
                                            onclick="redirectToGoogle()">
                                        <i class="fab fa-google me-2"></i> Sign in with google
                                    </button>

                                    <button type="submit" class="btn btn-lg btn-block btn-primary"
                                            style="background-color: #3b5998;">
                                        <i class="fab fa-facebook-f me-2"></i>Sign in with facebook
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="~/js/useraccount/useraccount/login.js"></script>
</html>

