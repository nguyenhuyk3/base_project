@{
    ViewBag.Title = "Reset Password Error";
}

<div class="alert alert-danger">
    @if (ViewBag.ErrorMessage != null)
    {
        <p>@ViewBag.ErrorMessage</p>
    }
    else
    {
        <p>An error occurred while trying to reset your password. Please try again later.</p>
    }
</div>
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thông báo kiểm tra Gmail</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: center;
            background-color: #f7f7f7;
        }

        .notification-container {
            width: 100%;
            background-color: #007BFF;
            color: white;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

            .notification-container h1 {
                font-size: 24px;
                margin: 0 0 10px 0;
            }

            .notification-container p {
                font-size: 18px;
                margin: 0;
            }

            .notification-container .btn {
                display: inline-block;
                margin-top: 20px;
                padding: 10px 20px;
                font-size: 16px;
                color: #007BFF;
                background-color: #fff;
                text-decoration: none;
                border-radius: 5px;
                transition: background-color 0.3s ease;
            }

                .notification-container .btn:hover {
                    background-color: #e0e0e0;
                }
    </style>
</head>
<body>
    <div class="notification-container">
        <h1>Thông báo</h1>
        <p>Đã xảy ra lỗi khi cố gắng đặt lại mật khẩu của bạn. Vui lòng thử lại sau.</p>
        <a href="https://mail.google.com" target="_blank" class="btn">Kiểm tra Gmail</a>
    </div>
</body>
</html>
