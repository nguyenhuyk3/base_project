@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Motel.ViewModels.RegisteredUserAccount

@{
    ViewBag.Title = "Đăng kí";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <title>Đăng kí tài khoản</title>
    <link href="https://pro.fontawesome.com/releases/v5.15.4/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebProject.styles.css" asp-append-version="true" />
</head>
<body style="margin-bottom: 0px;">
    <div class="px-4 py-5 px-md-5 text-center text-lg-start"
         style="background-color: rgb(210, 210, 210);">
        <div class="container-fluid">
            <div>
                <a class="fas fa-home text-decoration-none fs-5 text-dark"
                   asp-area="Post" asp-controller="Home" asp-action="Index">
                    Trang chủ
                </a>
            </div>
            <div class="row gx-lg-5 align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <h1 class="my-5 display-3 fw-bold ls-tight">
                        The best offer <br />
                        <span class="text-primary">for your business</span>
                    </h1>
                    <p style="color: hsl(217, 10%, 50.8%)">
                        Lorem ipsum dolor sit amet consectetur adipisicing elit.
                        Eveniet, itaque accusantium odio, soluta, corrupti aliquam
                        quibusdam tempora at cupiditate quis eum maiores libero
                        veritatis? Dicta facilis sint aliquid ipsum atque?
                    </p>
                </div>
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="card card--login">
                        <div class="card-body py-5 px-md-5">
                            <h3 class="mb-5">Đăng kí</h3>
                            <form asp-action="Register" asp-controller="UserAccount" method="post">
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group mb-4">
                                    <input type="text" asp-for="FullName"
                                           class="form-control form-control-lg" placeholder="Họ và tên" />
                                    <span asp-validation-for="FullName"
                                          class="text-danger"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <input asp-for="BirthDay" class="form-control" type="date"
                                           required="true" placeholder="Ngày sinh"
                                           onfocus="(this.type='date')"
                                           onblur="(this.type='text')" />
                                    <span asp-validation-for="BirthDay" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <div class=" row">
                                        <div class="col-6 d-flex justify-content-between">
                                            <div class="form-check">
                                                <input class="form-check-input" checked
                                                       type="radio" asp-for="Sex" value="true" id="Male" name="Sex" />
                                                <label class="form-check-label" for="Male">Nam</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input"
                                                       type="radio" asp-for="Sex" value="false" id="Female" name="Sex" />
                                                <label class="form-check-label" for="Female">Nữ</label>
                                            </div>
                                        </div>
                                    </div>
                                    <span asp-validation-for="Sex" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <input type="email" asp-for="Email"
                                           class="form-control form-control-lg" placeholder="Email đăng kí" />
                                    <span asp-validation-for="Email"
                                          class="text-danger"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <input type="password" asp-for="Password"
                                           class="form-control form-control-lg" placeholder="Mật khẩu" />
                                    <span asp-validation-for="Password"
                                          class="text-danger"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <input type="password" asp-for="ConfirmedPassword"
                                           class="form-control form-control-lg" placeholder="Mật khẩu xác nhận" />
                                    <span asp-validation-for="ConfirmedPassword"
                                          class="text-danger"></span>
                                </div>

                                <a asp-action="Login" asp-controller="UserAccount"
                                   class="d-block mb-3">
                                    Bạn đã có tài khoản
                                </a>

                                <button type="submit" class="btn btn-primary btn-lg">Register</button>

                                <hr class="my-4">

                                <div class="d-flex justify-content-between">
                                    <button type="button" class="btn btn-lg btn-block btn-primary" style="background-color: #dd4b39;"
                                            onclick="redirectToGoogle()">
                                        <i class="fab fa-google me-2"></i> Sign in with google
                                    </button>
                                    <button type="submit" class="btn btn-lg btn-block btn-primary" style="background-color: #3b5998;">
                                        <i class="fab fa-facebook-f me-2"></i>Sign in with facebook
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    window.addEventListener('DOMContentLoaded', function () {
        var eJOYRoot = document.getElementById('eJOY__extension_root');
        if (eJOYRoot) {
            eJOYRoot.remove();
        }
    });
</script>
</html>
