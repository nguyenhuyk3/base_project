<!-- Notification Element -->
<div id="notification" class="notification"></div>
@section Scripts {
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/createconnection.js"></script>
    <script>
        $(document).ready(function () {
            // Function to toggle favorite status and update local storage
            function toggleFavoriteStatus(postId, button) {
                // Get current liked status from local storage for current user
                var userId = button.closest(".favorite-form").data("userid");
                var key = userId + "_" + postId;
                var isLiked = localStorage.getItem(key) === "true";

                // Toggle liked status
                isLiked = !isLiked;

                // Update local storage for current user only
                localStorage.setItem(key, isLiked.toString());

                // Toggle button color
                button.toggleClass("active", isLiked);

                return isLiked;
            }

            // Set initial state of favorite buttons based on local storage
            $(".favorite-btn").each(function () {
                var button = $(this);
                var postId = button.closest(".favorite-form").data("postid");
                var userId = button.closest(".favorite-form").data("userid");
                var key = userId + "_" + postId;

                var isLiked = localStorage.getItem(key) === "true";
                button.toggleClass("active", isLiked);
            });

            // Handle click event for favorite button
            $(".favorite-btn").click(function () {
                var button = $(this);
                var postId = button.closest(".favorite-form").data("postid");

                // Toggle favorite status
                var isLiked = toggleFavoriteStatus(postId, button);

                // Send AJAX request to add or remove from favorites
                $.ajax({
                    type: "POST",
                    url: isLiked ? "/Post/Home/AddToFavorites" : "/Post/Home/RemoveFromFavorites",
                    data: { postId: postId },
                    success: function (response) {
                        if (response.success) {

                        } else {
                            // Rollback local storage if server request fails
                            toggleFavoriteStatus(postId, button);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error(error);
                        // Rollback local storage if server request fails
                        toggleFavoriteStatus(postId, button);
                        showNotification("Đã xảy ra lỗi khi thực hiện thao tác.", 'error');
                    }
                });
            });

            function showNotification(message, type) {
                var notification = $('#notification');
                notification.removeClass('success error');
                notification.addClass(type);
                notification.text(message);
                notification.fadeIn();

                setTimeout(function () {
                    notification.fadeOut();
                }, 3000); // Hide after 3 seconds
            }
        });
    </script>
}
