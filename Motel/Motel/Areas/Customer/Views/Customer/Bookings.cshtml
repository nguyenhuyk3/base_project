@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model Motel.ViewModels.ModificationLayoutViewModel

@{
    ViewData["Title"] = "Thêm bài viết";
    Layout = "~/Areas/Post/Views/_Modification_Layout.cshtml";
}

@section _Modification_Layout_Styles {

}

<div class="container-fluid">
    <div class="container">
        <h1>Danh sách thông tin</h1>
        <table class="table mt-3">
            <thead>
                <tr>
                    <th>Số điện thoại</th>
                    <th>Họ và tên</th>
                    <th>Gửi vào lúc</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>0123456789</td>
                    <td>example@example.com</td>
                    <td>John Doe</td>
                    <td><button class="btn btn-primary" data-toggle="modal" data-target="#infoModal">Chi tiết</button></td>
                </tr>
                <!-- Thêm các hàng khác ở đây nếu cần -->
            </tbody>
        </table>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="infoModal" tabindex="-1" role="dialog" aria-labelledby="infoModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="infoModalLabel">Thông tin chi tiết</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table class="table">
                        <tr>
                            <td>Số điện thoại:</td>
                            <td>0123456789</td>
                        </tr>
                        <tr>
                            <td>Email:</td>
                            <td>example@example.com</td>
                        </tr>
                        <tr>
                            <td>Họ và tên:</td>
                            <td>John Doe</td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section _Modification_Layout {

} 