@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebProject</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
          integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA=="
          crossorigin="anonymous" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Motel.styles.css" asp-append-version="true" />
    <!--Toast-->
    <link href="~/toast/toast.css" rel="stylesheet" />
    <!--Notification-->
    <link href="~/notification/ikr.notification.css" rel="stylesheet" />
    <!--Self-Written CSS-->
    <link href="~/css/_layout.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>
    @{
        var isLogginedIn = User.Identity.IsAuthenticated;
        var receiverEmail = User.Claims.FirstOrDefault(f => f.Type == ClaimTypes.Email)?.Value;
        var receiverName = User.Claims.FirstOrDefault(f => f.Type == ClaimTypes.Name)?.Value;
    }

    <div id="toast-notification"></div>
    <input type="hidden"
           name="receiverEmail" id="receiverEmail"
           value="@receiverEmail" />

    <header>
        <!--Nav-->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand"
                   asp-area="Post" asp-controller="Home" asp-action="Index">
                    Trang chủ
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-area="" asp-controller="Home" asp-action="Index">
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-area="" asp-controller="Home" asp-action="Privacy">
                                Privacy
                            </a>
                        </li>
                    </ul>
                    @if (!isLogginedIn)
                    {
                        <a class="nav-link text-dark mx-2"
                           asp-area="UserAccount" asp-controller="UserAccount" asp-action="Login">
                            Đăng nhập
                        </a>
                        <a class="nav-link text-dark mx-2"
                           asp-area="UserAccount" asp-controller="UserAccount" asp-action="Register">
                            Đăng kí
                        </a>
                    }
                    else
                    {
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-inline-block favorite-list mr-1">
                                <button class="btn-list">
                                    <i class="fa-regular fa-heart"></i>
                                </button>
                            </div>

                            <div class="d-inline-block mr-1" id="noti_Container">
                                <div class="ikrNoti_Counter" id="ikrNoti_Counter">0</div>
                                <div class="ikrNoti_Button" id="ikrNoti_Button">
                                    <i class="fas fa-bell"></i>
                                </div>
                                <div class="ikrNotifications" style="display: none !important">
                                    <h3>
                                        Notifications (<span class="notiCounterOnHead" id="notiCounterOnHead">0</span>)
                                    </h3>
                                    <div class="ikrNotificationItems">
                                        <ul class="list-group" id="notificationList"></ul>
                                    </div>
                                    <div class="ikrSeeAll">
                                        <a href="#">See all</a>
                                    </div>
                                </div>
                            </div>

                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @receiverName
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Nạp tiền</a>
                                    <div class="dropdown-item">
                                        <form class="form-inline" asp-area="UserAccount" asp-controller="UserAccount" asp-action="Logout" method="post" id="LogoutForm">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-link text-dark text-decoration-none p-0" id="LogoutButton">
                                                Đăng xuất
                                            </button>
                                        </form>
                                    </div>
                                    <a class="dropdown-item" href="#">Another link</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </nav>
        <!---->
    </header>

    <div class="container-fluid" style="padding: 0">
        <main role="main" class="pb-3" style="margin-top: 70px">
            @RenderBody()
        </main>
    </div>

    @*  <footer class="border-top footer text-muted">
    <div class="container">
    &copy; 2024 - WebProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!--Toast JS-->
    <script src="~/toast/toast.js"></script>
    <!--Notification JS-->
    <script src="~/notification/ikr.notificationplugin.js"></script>
    <!--SingalR-->
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/getnotifications.js"></script>
    <!--Self-written JS-->
    <script>
        document.querySelector('.dropdown').addEventListener('mouseover', function () {
            this.querySelector('.dropdown-menu').style.display = 'block';
        });

        document.querySelector('.dropdown').addEventListener('mouseleave', function () {
            this.querySelector('.dropdown-menu').style.display = 'none';
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
