<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebProject</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
          integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA=="
          crossorigin="anonymous" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Motel.styles.css" asp-append-version="true" />
    <!--Toast-->
    <link href="~/toast/toast.css" rel="stylesheet" />
    <!--Notification-->
    <link href="~/notification/ikr.notification.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>
    @{
        bool isLogginedIn = User.Identity.IsAuthenticated;
    }
    
    <div id="toast-notification"></div>

    <header>
        <!--Nav-->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand"
                   asp-area="Post" asp-controller="Home" asp-action="Index">
                    Trang chủ
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-area="" asp-controller="Home" asp-action="Index">
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-area="" asp-controller="Home" asp-action="Privacy">
                                Privacy
                            </a>
                        </li>
                    </ul>
                    @if (!isLogginedIn)
                    {
                        <a class="nav-link text-dark mx-2"
                           asp-area="UserAccount" asp-controller="UserAccount" asp-action="Login">
                            Đăng nhập
                        </a>
                        <a class="nav-link text-dark mx-2"
                           asp-area="UserAccount" asp-controller="UserAccount" asp-action="Register">
                            Đăng kí
                        </a>
                    }
                    else
                    {
                        <div id="noti_Container">
                            <div class="ikrNoti_Counter">1</div>
                            <!--Button-->
                            <div class="ikrNoti_Button">
                                     <i class="fas fa-bell"></i>
                            </div>
                            <!---->
                            <div class="ikrNotifications"
                                 style="display: none !important">
                                <h3>Notifications (<span class="notiCounterOnHead">1</span>)</h3>
                                <div class="ikrNotificationItems">
                                    <ul id="messagesList">
                                    </ul>
                                </div>
                                <div class="ikrSeeAll">
                                    <a href="#">See all</a>
                                </div>
                            </div>
                        </div>
                        <form class="form-inline"
                              asp-area="UserAccount" asp-controller="UserAccount" asp-action="Logout"
                              method="post" id="LogoutForm">
                            @Html.AntiForgeryToken()

                            <button type="submit" class="btn btn-link text-dark text-decoration-none"
                                    id="LogoutButton">
                                Đăng xuất
                            </button>
                        </form>
                    }
                </div>
            </div>
        </nav>
        <!---->
    </header>

    <div class="container-fluid" style="padding: 0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   @*  <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WebProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!--Self-written CSS-->
    <link href="~/css/_layout.css" rel="stylesheet" />
    <!--Self-written JS-->
    <script src="~/js/home/index.js"></script>
    <!--Toast JS-->
    <script src="~/toast/toast.js"></script>
    <!--Notification JS-->
    <script src="~/notification/ikr.notificationplugin.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
