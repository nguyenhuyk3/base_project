@model WebProject.Models.UserAccount

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.11.0/mdb.min.css" rel="stylesheet">
    <link href="../assets/css/Login.css" rel="stylesheet" />
    <title>Document</title>
</head>
<body>
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                         class="img-fluid" alt="Phone image">
                </div>
                @using (Html.BeginForm("Login", "UserAccount", FormMethod.Post))
                {
                    @Html.ValidationSummary()
                    @Html.AntiForgeryToken()
                    <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                        <!-- Email input -->
                        <div data-mdb-input-init class="form-outline mb-4">
                            <label>Tài khoản</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "AccountName" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "form-text text-danger" })
                        </div>
                        <!-- Password input -->
                        <div data-mdb-input-init class="form-outline mb-4">
                            <label>Mật khẩu</label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "form-text text-danger" })
                        </div>
                        <!-- Submit button -->
                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg btn-block">Đăng nhập</button>
                        <!-- Facebook login button -->
                        <a data-mdb-ripple-init class="btn btn-primary btn-lg btn-block" href="#!" role="button">
                            <i class="fab fa-facebook-f me-2"></i>Continue with Facebook
                        </a>
                    </div>
                }
            </div>
        </div>
    </section>
</body>
</html>
